# Sound
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '5%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '5%-'"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle"

# Spotify
bindsym $mod+F1 exec "playerctl --player=spotify previous"
bindsym $mod+F2 exec "playerctl --player=spotify next"
bindsym $mod+F3 exec "playerctl --player=spotify play-pause"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Disables Windows border
for_window [class="^.*"] border pixel 1
new_window pixel 0
new_float pixel 1
for_window [class="notify"] floating enable border 1pixel

# Gaps
gaps inner 0
gaps outer 0
smart_borders on

bindsym $mod+ctrl+Left gaps inner current minus 5
bindsym $mod+ctrl+Right gaps inner current plus 5
bindsym $mod+ctrl+Down gaps outer current minus 5
bindsym $mod+ctrl+Up gaps outer current plus 5

# Steam floating
for_window [class="Steam"] floating enable
for_window [title="Steam"] floating disable
for_window [class="Steam" title="Steam - Update News$"] floating enable
for_window [class="Orage"] floating enable

