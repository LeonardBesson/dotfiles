! Adds padding around terminal text
!URxvt.internalBorder: 4

!URxvt.font:-ypn-envpynforpowerline-medium-r-normal--13-130-75-75-c-90-iso8859-1

URxvt.font: xft:Gohufont:pixelsize=18
URxvt.boldFont: xft:Gohufont:pixelsize=18

!URxvt.font: xft:Gohufont:size=22:antialias=true
!URxvt.boldFont: xft:Gohufont:size=22:antialias=true

!URxvt.font: -*-gohufont-medium-r-normal-*-14-*-*-*-*-*-*-*
!URxvt.boldFont: -*-gohufont-bold-r-normal-*-14-*-*-*-*-*-*-*

!URxvt.font: xft:Source Code Pro:style=Light:pixelsize=16
!URxvt.boldfont: xft:Source Code Pro:style=Regular:pixelsize=16

!URxvt.font: xft:Terminus:style=Regular:pixelsize=20
!URxvt.boldfont: xft:Terminus:style=Bold:pixelsize=20

! Disables Scrollbar
URxvt.scrollBar: false

! Sets urxvt as login shell
URxvt*loginShell: true

! Enables copy/paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

!URxvt.keysym.C-z: \033[33~

!URxvt.cursorColor: green

! Base16 Default

#define base00 #181818
#define base01 #282828
#define base02 #383838
#define base03 #585858
#define base04 #b8b8b8
#define base05 #d8d8d8
#define base06 #e8e8e8
#define base07 #f8f8f8
#define base08 #ab4642
#define base09 #dc9656
#define base0A #f7ca88
#define base0B #a1b56c
#define base0C #86c1b9
#define base0D #7cafc2
#define base0E #ba8baf
#define base0F #a16946

URxvt.foreground:   base05
URxvt.background:   base00
URxvt.cursorColor:  base05

URxvt.color0:       base00
URxvt.color1:       base08
URxvt.color2:       base0B
URxvt.color3:       base0A
URxvt.color4:       base0D
URxvt.color5:       base0E
URxvt.color6:       base0C
URxvt.color7:       base05

URxvt.color8:       base03
URxvt.color9:       base08
